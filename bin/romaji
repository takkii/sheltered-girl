#!/usr/bin/env ruby
# frozen_string_literal: true

# vim: filetype=ruby

require 'timeout'

lib = File.expand_path('lib', __dir__)
$LOAD_PATH.unshift(lib) unless $LOAD_PATH.include?(lib)

Encoding.default_internal = 'UTF-8'
Encoding.default_external = 'UTF-8'

# zinbeijett function
module Romaji
  module_function

  def to_romaji
    require 'romaji'
    TenjiMaker.to_romaji_1
  end
end

include Romaji

begin
  to_romaji
rescue Exception => e
  # puts e.backtrace
ensure
  GC.compact
end

__END__